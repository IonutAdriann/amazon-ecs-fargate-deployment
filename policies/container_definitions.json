[
  {
    "name": "app-container-definition",
    "image": "${ecr_image_url}",
    "cpu": "${fargate_cpu}",
    "memory": "${fargate_memory}",
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/container-app",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "portMappings": [
      {
        "containerPort": "${application_port}",
        "hostPort": "${application_port}"
      }
    ]
  }
]
